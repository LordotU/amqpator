{
  "name": "amqpator",
  "version": "1.1.0",
  "description": "Wrapper for amqplib which simplifies its usage for publishing and subscribing",
  "keywords": [
    "amqp",
    "amqplib",
    "pub",
    "rabbitmq",
    "sub"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LordotU/amqpator"
  },
  "license": "MIT",
  "author": "Oleg Levshin <LevshinO@gmail.com>",
  "files": [
    "src"
  ],
  "main": "src/index.js",
  "scripts": {
    "docs": "jsdoc2md src/*.js > docs/index.md",
    "lint": "eslint -c ./.eslintrc.js ./src",
    "pre-commit": "lint-staged",
    "test": "yarn test:jest && yarn test:coverage",
    "test:jest": "jest --detectOpenHandles --runInBand",
    "test:coverage": "cat ./__tests__/coverage/lcov.info | coveralls"
  },
  "config": {
    "pre-git": {
      "allow-untracked-files": true,
      "pre-commit": [
        "yarn pre-commit"
      ]
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/__tests__/coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/__tests__/"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/__tests__/coverage/"
    ],
    "verbose": false
  },
  "dependencies": {
    "amqplib": "^0.7.1",
    "nanodelay": "^1.0.8",
    "nanoid": "^3.1.22"
  },
  "devDependencies": {
    "coveralls": "^3.1.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "got": "^11.8.2",
    "jest": "^26.6.3",
    "jsdoc-to-markdown": "^7.0.1",
    "lint-staged": "^10.5.4",
    "pre-git": "^3.17.1"
  },
  "lint-staged": {
    "*.js": [
      "yarn eslint -c ./.eslintrc.js",
      "git add"
    ]
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  }
}
